@page
@model PaboCafe.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us - Cafe Delight</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        #map-container {
            position: relative;
            height: 450px;
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 20px 0;
        }

        .dynamic-map {
            width: 100%;
            max-width: 600px;
            height: 100%;
            border: 0;
        }

        .static-map {
            display: none;
            width: 100%;
            max-width: 600px;
        }

        .noscript .static-map {
            display: block;
        }

        .noscript .dynamic-map {
            display: none;
        }
    </style>
</head>
<body>
    <header>
        <h1>PaboCafe</h1>
    </header>

    <main>
        <h2>Contact Us</h2>
        <div class="contact-info">
            <p><strong>Address:</strong> 123 Coffee Lane, Brewtown, BT 56789</p>
            <p><strong>Phone:</strong> +673 8682090</p>
            <p><strong>Email:</strong> <a href="mailto:info@PaboCafe.com">info@PaboCafe.com</a></p>
        </div>

        <div class="contact-form">
            <h3>Send Us a Message</h3>
            <form action="submit_form.php" method="post">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>

                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>

                <label for="message">Message:</label>
                <textarea id="message" name="message" rows="5" required></textarea>

                <button type="submit">Send Message</button>
            </form>
        </div>
        <br /><br />
        <h3 class="text-center">Our Location</h3>
        <div id="map-container">
            <iframe class="dynamic-map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3975.321434463435!2d114.92909427364053!3d4.885736240028496!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x32228ac8ee3f7d03%3A0xcacd96016959ec39!2sLaksamana%20College%20of%20Business!5e0!3m2!1sen!2sbn!4v1717136365927!5m2!1sen!2sbn" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            <noscript>
                <img class="static-map" src="https://maps.googleapis.com/maps/api/staticmap?center=4.885736240028496,114.92909427364053&zoom=14&size=600x450&markers=color:red%7Clabel:C%7C4.885736240028496,114.92909427364053&key=YOUR_API_KEY" alt="Static map showing the location of the cafe">
            </noscript>
        </div>
    </main>
</body>
</html>




